{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python:Odoo",
            "type":"python",
            "request":"launch",
            "stopOnEntry": false,
            "console":"integratedTerminal",
            "program":"${workspaceRoot}/odoo-bin",
            "args": [
               "--config=${workspaceRoot}/odoo.conf",
            ],
            "cwd":"${workspaceRoot}",
            "env": {},
            // "envFile":"${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}
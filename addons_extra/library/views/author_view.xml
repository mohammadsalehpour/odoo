<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="age" />
                        </group>
                    </group>
                    <notebook>
                        <page name="view_author_books_page" string="Books">
                            <field name="book_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree string="Author">
                <field name="name" />
                <field name="age" />
            </tree>
        </field>
    </record>

    <record id="view_author_action" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>